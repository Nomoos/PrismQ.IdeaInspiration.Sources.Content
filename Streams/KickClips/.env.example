# Working Directory Configuration
# This is set automatically to PrismQ_WD/ if running from PrismQ directory
WORKING_DIRECTORY=./

# Database Configuration
# SQLite database URL for storing Kick clips data
DATABASE_URL=sqlite:///kick_clips.db

# Kick Scraping Configuration
# Maximum number of clips to scrape from trending
KICK_TRENDING_MAX_CLIPS=50

# Maximum number of clips to scrape from a category
KICK_CATEGORY_MAX_CLIPS=50

# Maximum number of clips to scrape from a streamer channel
KICK_STREAMER_MAX_CLIPS=50

# Kick API Configuration (if using unofficial API services)
# Leave empty if using direct scraping
KICK_API_KEY=

# Scraping Behavior
# Delay between requests (seconds) to avoid rate limiting
REQUEST_DELAY=1.0

# Maximum retries for failed requests
MAX_RETRIES=3

# Timeout for HTTP requests (seconds)
REQUEST_TIMEOUT=30
